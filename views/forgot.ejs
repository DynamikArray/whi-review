<%-include('shared/_header.ejs' ); %>

<div class="container">

  <div class="row">
    <div class="Absolute-Center is-Responsive">
      <div class="col-sm-12 col-md-10 col-md-offset-1">

        <% if(message.length > 0) {%>
          <div class="alert alert-success">
            <h4 class=""><%=message%></h4>
          </div>
        <% } %>

        <% if(error.length > 0) {%>
          <div class="alert alert-warning">
            <h4 class=""><%=error%></h4>
          </div>
        <% } %>

        <h2>Forgot Password ?</h2>
        <p>Fill out the form below to have an email with reset link sent to you. </p>

        <form action="/forgot" id="forgotForm" class="" method="POST">
          <div class="form-group input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <input class="form-control" type="text" name='email' placeholder="username"/>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-success center-block"><i class="fa fa-sign-in"></i>&nbsp;Send Email</button>
          </div>
        </form>

      </div>
    </div>
  </div>
</div>


<%-include('shared/_footer.ejs', {user:false}); %>
