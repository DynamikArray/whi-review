
<div class="well well-lg">
  <h1><i class="fa fa-sign-in"></i>&nbsp;Signup</h1>

  <%if(message.length > 0 ) { %>
    <div class="alert alert-danger">
      <%=message %>
    </div>
  <% } %>

  <form action="/signup" id="signupForm" class="" method="POST">
    <div class="form-group input-group">
      <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
      <input class="form-control" type="text" name='email' placeholder="email@domain.com"/>
    </div>
    <div class="form-group input-group">
      <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
      <input class="form-control" type="password" name='password' placeholder="password"/>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-default center-block"><i class="fa fa-sign-in"></i>&nbsp;Login</button>
    </div>
  </form>
</div>
