<div class="well well-sm m-b-xl">
  <h3 class="text-center">Add Comment </h3>
  <%if(message.length > 0 ) { %>
    <div class="alert alert-info">
      <%=message %>
    </div>
    <a name="comment"></a>
  <% } %>
  <form id="commentForm" action="/comments/add" class="form" method="POST" onsubmit="validateForm()">
    <div class="form-group">
      <label for="comment">Comment</label>
      <textarea class="form-control" rows="3" name="comment" id="comment" maxlength="5000"></textarea>
    </div>

  <div class="form-group">
    <label for="visitor">Name:</label>
    <input type="text" class="form-control" name="visitor" id="visitor" placeholder="Your name">
  </div>

  <button type="submit" class="btn btn-success" value="Submit" >
    <i class="fa fa-paper-plane"></i>&nbsp;Submit
  </button>

  </form>
</div>

<script>
  function validateForm(){
    var comment = document.forms['commentForm']['comment'].value;
    var visitor = document.forms['commentForm']['visitor'].value;

    if(comment.length == 0 || visitor.length == 0){
      swal({
        title: 'Ooops!',
        text: 'Please enter a both a Comment and Visitor Name.',
        type: 'error'
      });
      event.preventDefault();
    }
  }
</script>
